def pc_speed(pc_dex, pc_ht):
    yes = (pc_dex + pc_ht)/4
    return yes
def speed(dex, ht):
    yes = (dex + ht)/4
    return yes
#decrease hp
def dec_hp(inc, dec):
    return inc - dec
