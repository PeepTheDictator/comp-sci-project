#gun damages---------------
def pistol():
    di=random.randint(1,6)
    pistol=(di-3)*.5
    if pistol <1:
        pistol=1.0
    print(pistol)

def ar():
    di=random.randint(1,6)
    AR= (di+2)*5
    print(AR)

def shotgun():
    di=random.randint(1,6)
    di2=random.randint(1,6)
    shotgun= (di+di2)-1
    print(shotgun)

def sniper():
    di=random.randint(1,6)
    di1=random.randint(1,6)
    di2=random.randint(1,6)
    di3=random.randint(1,6)
    di4=random.randint(1,6)
    di5=random.randint(1,6)
    dix=di+di1+di2+di3+di4+di5
    sniper= (dix*2)*1.5
    print(sniper)

